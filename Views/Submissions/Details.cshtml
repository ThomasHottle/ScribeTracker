@model ScribeTracker.Models.Submission

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Submission</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Work</dt>
        <dd class="col-sm-10">
            <a asp-controller="Works" asp-action="Details" asp-route-id="@Model.WorkId">
                @Model.Work?.Title
            </a>
        </dd>

        <dt class="col-sm-2">Pen Name</dt>
        <dd class="col-sm-10">
            <a asp-controller="PenNames" asp-action="Details" asp-route-id="@Model.Work?.PenNameId">
                @Model.Work?.PenName?.Name
            </a>
        </dd>

        <dt class="col-sm-2">Market</dt>
        <dd class="col-sm-10">
            <a asp-controller="Markets" asp-action="Details" asp-route-id="@Model.MarketId">
                @Model.Market?.Name
            </a>
        </dd>

        <dt class="col-sm-2">Submitted On</dt>
        <dd class="col-sm-10">
            @Model.SubmissionDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>

        <dt class="col-sm-2">Payment</dt>
        <dd class="col-sm-10">
            @Model.Payment?.ToString("C") ?? "—"
        </dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SubmissionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
